# ============================================================
# Palworld Server Management Panel - Environment Configuration
# ============================================================
# Copy this file to .env and update with your configuration
# DO NOT commit .env file to version control
# ============================================================

# Application Environment
# Use 'production' for deployment, 'development' for local testing
NODE_ENV=production

# Server Port (default: 8080)
# Note: UDP ports 8211-8300 are reserved for game servers
PORT=8080

# ============================================================
# SECURITY - MUST CHANGE FOR PRODUCTION
# ============================================================

# Admin login credentials
# IMPORTANT: Change these before deploying to production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# JWT Secret for token signing
# IMPORTANT: Generate a random secret key in production
# Generate with: openssl rand -base64 32
# DO NOT use default value in production
JWT_SECRET=your-secret-key-change-this

# Token expiry time (examples: 24h, 7d, 365d)
JWT_EXPIRY=24h

# CORS Origin for production (leave as default if accessing from same host)
# Example for remote access: https://palworld.example.com
CORS_ORIGIN=http://localhost:8080

# ============================================================
# Palworld Server Configuration (thijsvanloef/palworld-server-docker)
# ============================================================

# Game Server Settings
SERVER_NAME=Palworld Server
SERVER_DESCRIPTION=Managed by Palworld Server Panel
PLAYERS=32                          # Max players (default: 32)
SERVER_PASSWORD=                    # Leave empty for no password
PALWORLD_ADMIN_PASSWORD=adminPassword123  # RCON admin password

# Networking
PUBLIC_IP=                          # Leave empty for auto-detection
PUBLIC_PORT=8211                    # External game port
COMMUNITY=false                     # Show in community servers list

# Server Features
MULTITHREADING=true                 # Enable multi-threading
RCON_ENABLED=true                   # Enable RCON console
RCON_PORT=25575                     # RCON port

# Time Zone
TZ=UTC

# User/Group IDs (for file permissions)
PUID=1000
PGID=1000

# ============================================================
# Optional: Cloud & External Services
# ============================================================

# Cloudflare Tunnel Token (optional - for public access)
# CLOUDFLARE_TOKEN=your-token-here

# Database backup (optional)
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=daily

# ============================================================
# Performance Tuning (Advanced)
# ============================================================

# Server stats broadcast interval in milliseconds (default: 2000)
# STATS_INTERVAL=2000

# Log buffer size per server (default: 1000 lines)
# LOG_BUFFER_SIZE=1000